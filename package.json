{
  "name": "on-demand-ec2-runner",
  "version": "1.0.0",
  "description": "Launch and manage on-demand AWS EC2 instances as GitHub Actions runners",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "build": "esbuild src/main.ts --bundle --platform=node --target=node20 --outfile=dist/index.js"
  },
  "keywords": [],
  "author": "Guillem Casas",
  "license": "MIT",
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@aws-sdk/client-ec2": "^3.783.0",
    "@octokit/rest": "^21.1.1"
  }
}
